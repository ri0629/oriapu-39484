<div class='accout-page' id='account-page'>
 <div class='account-page__inner clearfix'>
  <div class='account-page__inner--left account-page__header'>
   <h2>お客様情報<h2>
   <%= link_to "ログアウト", "#", class: 'btn'%>
   <%= link_to "トップページへ戻る", "#", class: 'btn'%>
   </div>
   <div class='account-page__inner--right user-form'>
    <%= form_with model: current_user, local: true do |f|%>
     <div class='field'>
      <div class='field-label'>
       <%= f.label :name%>
       </div>
       <div class='field-input'>
        <%= f.text_field :name, autofocus: true%>
        </div>
        </div>
        <div class='field'>
         <div class='field_label'>
          <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>